# Hermes Environment Configuration
# Copy this file to .env and customize for your setup

# ===== Zerodha API (for data ingestion) =====
ZERODHA_ENCTOKEN=your_enctoken_here

# ===== Data Layer Configuration =====
# Storage provider: "local" (default), future: "s3", "gcs"
HERMES_STORAGE_PROVIDER=local

# Path to market data directory (relative to project root or absolute)
HERMES_DATA_DIR=hermes-backend/data/minute

# ===== Cache Configuration =====
HERMES_CACHE_ENABLED=true
HERMES_CACHE_MAX_SIZE_MB=512

# ===== PostgreSQL Database =====
# For local development (Podman):
HERMES_DATABASE_URL=postgresql://hermes:hermes_secret@localhost:5432/hermes

# For container-to-container (inside Podman network):
# HERMES_DATABASE_URL=postgresql://hermes:hermes_secret@postgres:5432/hermes

# ===== Registry Configuration =====
HERMES_REGISTRY_ENABLED=true
