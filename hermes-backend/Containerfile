# Containerfile for Hermes Backend
# Uses Podman-compatible OCI format

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy and install hermes-data package first (for better caching)
COPY hermes-data /tmp/hermes-data
RUN pip install --no-cache-dir "/tmp/hermes-data[cloud]" && rm -rf /tmp/hermes-data

# Install backend dependencies
COPY hermes-backend/requirements.txt .
# Remove the local editable install line for container build
RUN grep -v "hermes-data" requirements.txt > requirements-container.txt && \
    pip install --no-cache-dir -r requirements-container.txt && \
    rm requirements-container.txt requirements.txt

# Copy backend code
COPY hermes-backend/ .

# Create non-root user for security
RUN useradd -m -u 1000 hermes && chown -R hermes:hermes /app
USER hermes

EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/')" || exit 1

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
